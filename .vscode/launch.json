  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug example 'basic'",
      "cargo": {
        "args": [
          "build",
          "--example=basic",
          "--package=bevy_match3"
        ],
        "filter": {
          "name": "basic",
          "kind": "example"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}",
        "RUST_BACKTRACE": "full"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in example 'basic'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--example=basic",
          "--package=bevy_match3"
        ],
        "filter": {
          "name": "basic",
          "kind": "example"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}",
        "RUST_BACKTRACE": "full"
      }
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'bevy_match3'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=bevy_match3"
        ],
        "filter": {
          "name": "bevy_match3",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "env": {
        "CARGO_MANIFEST_DIR": "${workspaceFolder}",
        "RUST_BACKTRACE": "full"
      }
    }
  ]
}